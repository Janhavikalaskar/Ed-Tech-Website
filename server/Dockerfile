FROM node:20
WORKDIR /app

COPY package* .

RUN npm install

COPY . .
EXPOSE 4000

ENV PORT = PORT_NUMBER
ENV MONGODB_URL = YOUR MONGO URL

ENV JWT_secret = YOUR JWT SECRET
 
ENV FOLDER_NAME = CLOUDINARY FOLDER NAME
ENV CLOUD_NAME = CLOUDINARY CLOUD NAME
ENV API_KEY = API KEY 
ENV API_SECRET = API SECRET

ENV MAIL_HOST = MAIL HOST 
ENV MAIL_USER = YOUR MAIL
ENV MAIL_PASS = MAIL PASS


ENV RAZORPAY_KEY = RAZOR PAY KEY
ENV RAZORPAY_SECRET = RAZOR PAY SECRET

CMD ["node","index.js"]
